<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DaguerreTheme" parent="Daguerre.Activity.Theme">
        <item name="colorPrimary">#FA8CBE</item> <!-- 设置ActionBar背景色 -->
        <item name="colorPrimaryDark">#FA8CBE</item> <!-- 设置状态栏背景色 -->
        <item name="daguerreCheckButtonColor">@android:color/white</item> <!-- 设置选择图片按钮主题色 -->
        <item name="daguerreActionDrawableColor">@android:color/white</item> <!-- 设置ActionBar菜单按钮颜色 -->
        <item name="daguerreActionModeDrawableColor">@android:color/white</item> <!-- 设置选择时ActionBar菜单按钮颜色 -->
